<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ilegong.pys" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>朋友说</name>
  <description>
        Ilegong app
    </description>
  <author email="zxq@ilegong.com" href="http://www.tongshijia.com/">
      Ilegong
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="Orientation" value="portrait" />

  <icon src="www/res/icons/ios/icon-60@3x.png" />
  <platform name="android">
    <icon src="www/res/icons/android/icon-40@2x.png" density="ldpi" />
    <icon src="www/res/icons/android/icon-40@2x.png" density="mdpi" />
    <icon src="www/res/icons/android/icon-40@2x.png" density="hdpi" />
    <icon src="www/res/icons/android/icon-60@3x.png" density="xhdpi" />
    <splash src="www/res/splash/android/splash.png" density="port-hdpi"/>
    <splash src="www/res/splash/android/splash.png" density="port-ldpi"/>
    <splash src="www/res/splash/android/splash.png" density="port-mdpi"/>
    <splash src="www/res/splash/android/splash.png" density="port-xhdpi"/>
  </platform>
  <platform name="ios">
    <!-- iPhone 6 Plus  -->
    <icon src="www/res/icons/ios/icon-60@3x.png" width="180" height="180" />
    <!-- iPhone / iPod Touch  -->
    <icon src="www/res/icons/ios/icon-60@2x.png" width="60" height="60" />
    <icon src="www/res/icons/ios/icon-60@2x.png" width="120" height="120" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="www/res/icons/ios/icon-40@2x.png" width="40" height="40" />
    <icon src="www/res/icons/ios/icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="www/res/icons/ios/icon-57@2x.png" width="57" height="57" />
    <icon src="www/res/icons/ios/icon-57@2x.png" width="114" height="114" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/res/icons/ios/icon-40@2x.png" width="29" height="29" />
    <icon src="www/res/icons/ios/icon-40@2x.png" width="58" height="58" />

    <!-- images are determined by width and height. The following are supported -->
    <splash src="www/res/splash/ios/splash.png" width="320" height="480"/>
    <splash src="www/res/splash/ios/splash.png" width="640" height="960"/>
    <splash src="www/res/splash/ios/splash.png" width="768" height="1024"/>
    <splash src="www/res/splash/ios/splash.png" width="1536" height="2048"/>
    <splash src="www/res/splash/ios/splash.png" width="1024" height="768"/>
    <splash src="www/res/splash/ios/splash.png" width="2048" height="1536"/>
    <splash src="www/res/splash/ios/splash.png" width="640" height="1136"/>
    <splash src="www/res/splash/ios/splash.png" width="750" height="1334"/>
    <splash src="www/res/splash/ios/splash.png" width="1242" height="2208"/>
    <splash src="www/res/splash/ios/splash.png" width="2208" height="1242"/>
  </platform>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
</widget>